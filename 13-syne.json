{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Syne",
	"category": "bold",
	"keywords": [
		"sans-serif",
		"clean",
		"modern",
		"contemporary",
		"uppercase",
		"bold",
		"minimalist",
		"tech",
		"dynamic",
		"impactful",
		"powerful"
	],
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Syne",
							"fontStyle": "normal",
							"fontWeight": "400 700",
							"src": [
								"file:./assets/fonts/syne/Syne-VariableFont_wght.ttf"
							]
						}
					],
					"fontFamily": "\"Syne\", sans-serif",
					"name": "Syne",
					"slug": "syne"
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"size": "18px",
					"slug": "small",
					"fluid": {
						"min": "16px",
						"max": "18px"
					}
				},
				{
					"name": "Medium",
					"size": "24px",
					"slug": "medium",
					"fluid": {
						"min": "18px",
						"max": "24px"
					}
				},
				{
					"name": "Large",
					"size": "40px",
					"slug": "large",
					"fluid": {
						"min": "28px",
						"max": "40px"
					}
				},
				{
					"name": "Extra Large",
					"size": "52px",
					"slug": "x-large",
					"fluid": {
						"min": "32px",
						"max": "52px"
					}
				},
				{
					"name": "2X Large",
					"size": "56px",
					"slug": "xx-large",
					"fluid": {
						"min": "40px",
						"max": "56px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--syne)",
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "uppercase",
					"fontWeight": "700"
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--syne)",
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "uppercase",
					"fontWeight": "700"
				}
			},
			"core/site-tagline": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--syne)",
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "uppercase",
					"fontWeight": "700"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--syne)",
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "uppercase",
					"fontWeight": "700"
				}
			},
			"h1": {
				"typography": {
					"lineHeight": "0.9"
				}
			},
			"h2": {
				"typography": {
					"lineHeight": "1"
				}
			},
			"h3": {
				"typography": {
					"lineHeight": "1"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--syne)",
					"fontWeight": "700",
					"textTransform": "uppercase"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--syne)",
			"fontWeight": "400",
			"lineHeight": "1.5",
			"fontSize": "var(--wp--preset--font-size--small)"
		}
	}
}
