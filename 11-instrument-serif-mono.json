{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Instrument Serif & Noto Mono",
	"category": "bold",
	"keywords": [
		"serif",
		"technical",
		"monospace",
		"uppercase",
		"industrial",
		"urban",
		"minimalist",
		"clean",
		"contemporary"
	],
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Instrument Serif",
							"fontStyle": "normal",
							"fontWeight": "400 700",
							"src": [
								"file:./assets/fonts/instrument-serif/InstrumentSerif-Regular.ttf"
							]
						},
						{
							"fontFamily": "Instrument Serif",
							"fontStyle": "italic",
							"fontWeight": "400 700",
							"src": [
								"file:./assets/fonts/instrument-serif/InstrumentSerif-Italic.ttf"
							]
						}
					],
					"fontFamily": "\"Instrument Serif\", serif",
					"name": "Instrument Serif",
					"slug": "instrument-serif"
				},
				{
					"fontFace": [
						{
							"fontFamily": "Noto Sans Mono",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "100 800",
							"src": [
								"file:./assets/fonts/noto-sans/NotoSansMono-VariableFont_wdth,wght.ttf"
							]
						}
					],
					"fontFamily": "\"Noto Sans Mono\", monospace",
					"name": "Noto Sans Mono",
					"slug": "noto-sans-mono"
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"size": "14px",
					"slug": "small",
					"fluid": {
						"min": "13px",
						"max": "14px"
					}
				},
				{
					"name": "Medium",
					"size": "18px",
					"slug": "medium",
					"fluid": {
						"min": "16px",
						"max": "18px"
					}
				},
				{
					"name": "Large",
					"size": "32px",
					"slug": "large",
					"fluid": {
						"min": "24px",
						"max": "32px"
					}
				},
				{
					"name": "Extra Large",
					"size": "48px",
					"slug": "x-large",
					"fluid": {
						"min": "36px",
						"max": "48px"
					}
				},
				{
					"name": "2X Large",
					"size": "64px",
					"slug": "xx-large",
					"fluid": {
						"min": "40px",
						"max": "64px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
					"fontWeight": "400",
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "uppercase"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
					"fontWeight": "400",
					"textTransform": "uppercase",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "400",
					"textTransform": "uppercase"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontWeight": "400",
					"lineHeight": "0.8",
					"letterSpacing": "-0.005em"
				}
			},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"lineHeight": "0.8"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"lineHeight": "1.1"
				}
			},
			"h3": {
				"typography": {
					"lineHeight": "1.1",
					"fontSize": "var(--wp--preset--font-size--large)",
					"letterSpacing": "0"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "1.1",
					"letterSpacing": "0"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
			"fontSize": "13px",
			"fontStyle": "normal",
			"textTransform": "uppercase",
			"fontWeight": "400",
			"lineHeight": "1.9"
		}
	}
}
