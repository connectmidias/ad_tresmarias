{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Gabarito & Noto Sans Mono",
	"category": "sophisticated",
	"keywords": [
		"sans-serif",
		"monospace",
		"minimalistic",
		"simple",
		"uppercase",
		"bold",
		"modern",
		"tech",
		"utilitarian",
		"edgy",
		"functional"
	],
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Gabarito",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "100 900",
							"src": [
								"file:./assets/fonts/gabarito/Gabarito-VariableFont_wght.ttf"
							]
						}
					],
					"fontFamily": "\"Gabarito\", sans-serif",
					"name": "Gabarito",
					"slug": "gabarito"
				},
				{
					"fontFace": [
						{
							"fontFamily": "Noto Sans Mono",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "100 800",
							"src": [
								"file:./assets/fonts/noto-sans/NotoSansMono-VariableFont_wdth,wght.ttf"
							]
						}
					],
					"fontFamily": "\"Noto Sans Mono\", monospace",
					"name": "Noto Sans Mono",
					"slug": "noto-sans-mono"
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"size": "14px",
					"slug": "small",
					"fluid": {
						"min": "13px",
						"max": "14px"
					}
				},
				{
					"name": "Medium",
					"size": "18px",
					"slug": "medium",
					"fluid": {
						"min": "16px",
						"max": "18px"
					}
				},
				{
					"name": "Large",
					"size": "32px",
					"slug": "large",
					"fluid": {
						"min": "24px",
						"max": "32px"
					}
				},
				{
					"name": "Extra Large",
					"size": "56px",
					"slug": "x-large",
					"fluid": {
						"min": "40px",
						"max": "56px"
					}
				},
				{
					"name": "2X Large",
					"size": "72px",
					"slug": "xx-large",
					"fluid": {
						"min": "48px",
						"max": "72px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--gabarito)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "500",
					"letterSpacing": "1px",
					"textTransform": "uppercase"
				}
			},
			"core/navigation": {
				"typography": {
					"fontWeight": "400",
					"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/site-tagline": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontFamily": "var(--wp--preset--font-family--gabarito)",
					"fontWeight": "400",
					"letterSpacing": "1px",
					"textTransform": "uppercase"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontFamily": "var(--wp--preset--font-family--gabarito)",
					"fontWeight": "500",
					"letterSpacing": "1px",
					"textTransform": "uppercase"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--gabarito)",
					"fontWeight": "600",
					"lineHeight": "0.9",
					"textTransform": "uppercase"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
			"fontSize": "var(--wp--preset--font-size--small)",
			"lineHeight": "1.8"
		}
	}
}
