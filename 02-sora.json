{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Sora",
	"category": "playful",
	"keywords": [
		"sans-serif",
		"clean",
		"modern",
		"contemporary",
		"geometric",
		"minimalist",
		"tech",
		"versatile"
	],
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Sora",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "100 800",
							"src": [
								"file:./assets/fonts/sora/Sora-VariableFont_wght.ttf"
							]
						}
					],
					"fontFamily": "\"Sora\", sans-serif",
					"name": "Sora",
					"slug": "sora"
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"size": "18px",
					"slug": "small",
					"fluid": {
						"min": "17px",
						"max": "19px"
					}
				},
				{
					"name": "Medium",
					"size": "20px",
					"slug": "medium",
					"fluid": {
						"min": "20px",
						"max": "22px"
					}
				},
				{
					"name": "Large",
					"size": "32px",
					"slug": "large",
					"fluid": {
						"min": "28px",
						"max": "32px"
					}
				},
				{
					"name": "Extra Large",
					"size": "48px",
					"slug": "x-large",
					"fluid": {
						"min": "36px",
						"max": "48px"
					}
				},
				{
					"name": "2X Large",
					"size": "64px",
					"slug": "xx-large",
					"fluid": {
						"min": "40px",
						"max": "64px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/navigation": {
				"typography": {
					"fontSize": "16px",
					"fontWeight": "300"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "600"
				}
			},
			"core/site-tagline": {
				"typography": {
					"fontSize": "14px",
					"fontWeight": "300"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--sora)",
					"fontSize": "13px",
					"fontWeight": "400",
					"textTransform": "uppercase",
					"letterSpacing": "0.05em"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--sora)",
					"fontWeight": "550",
					"lineHeight": "1.1"
				}
			},
			"h3": {
				"typography": {
					"fontWeight": "550"
				}
			},
			"h4": {
				"typography": {
					"fontWeight": "550"
				}
			},
			"h5": {
				"typography": {
					"fontWeight": "550"
				}
			},
			"h6": {
				"typography": {
					"fontWeight": "550"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--sora)",
			"fontWeight": "300",
			"lineHeight": "1.65",
			"fontSize": "var(--wp--preset--font-size--small)"
		}
	}
}
