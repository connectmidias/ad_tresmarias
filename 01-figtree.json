{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Figtree",
	"category": "bold",
	"keywords": [
		"sans-serif",
		"friendly",
		"bold",
		"italic",
		"modern",
		"expressive",
		"dynamic",
		"versatile",
		"energetic",
		"contemporary"
	],
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Figtree",
							"fontStyle": "normal",
							"fontWeight": "400 800",
							"src": [
								"file:./assets/fonts/figtree/Figtree-VariableFont_wght.ttf"
							]
						},
						{
							"fontFamily": "Figtree",
							"fontStyle": "italic",
							"fontWeight": "400 800",
							"src": [
								"file:./assets/fonts/figtree/Figtree-Italic-VariableFont_wght.ttf"
							]
						}
					],
					"fontFamily": "\"Figtree\", sans-serif",
					"name": "Figtree",
					"slug": "figtree"
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"size": "18px",
					"slug": "small",
					"fluid": {
						"min": "17px",
						"max": "19px"
					}
				},
				{
					"name": "Medium",
					"size": "20px",
					"slug": "medium",
					"fluid": {
						"min": "20px",
						"max": "22px"
					}
				},
				{
					"name": "Large",
					"size": "32px",
					"slug": "large",
					"fluid": {
						"min": "28px",
						"max": "32px"
					}
				},
				{
					"name": "Extra Large",
					"size": "48px",
					"slug": "x-large",
					"fluid": {
						"min": "36px",
						"max": "48px"
					}
				},
				{
					"name": "2X Large",
					"size": "72px",
					"slug": "xx-large",
					"fluid": {
						"min": "56px",
						"max": "72px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "700",
					"fontStyle": "italic"
				}
			},
			"core/site-tagline": {
				"typography": {
					"fontSize": "15px",
					"fontWeight": "400",
					"fontStyle": "italic"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "700",
					"fontStyle": "italic"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontSize": "17px",
					"fontWeight": "700",
					"fontStyle": "italic"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--figtree)",
					"fontWeight": "800",
					"fontStyle": "italic"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--figtree)",
			"fontWeight": "400",
			"lineHeight": "1.5",
			"fontSize": "var(--wp--preset--font-size--small)"
		}
	}
}
